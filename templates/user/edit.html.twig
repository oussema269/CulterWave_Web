{% extends 'base.html.twig' %}

{% block title %}Edit User
{% endblock %}

{% block body %}

	<div class="container">

		<div class="row" style="display: flex; justify-content: center;align-items: center;">
			<div class="col-md-6">

				{{ form_start(form) }}
				<div class="form-group">
					{{ form_label(form.Nom, 'votre nom') }}
					{{ form_widget(form.Nom, { 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(form.Nom) }}
				</div>
				<div class="form-group">
					{{ form_label(form.Prenom, 'votre prenom') }}
					{{ form_widget(form.Prenom, { 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(form.Prenom) }}
				</div>
				<div class="form-group">
					{{ form_label(form.Email, 'votre Email') }}
					{{ form_widget(form.Email, { 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(form.Email) }}
				</div>
				<div class="form-group">
					{{ form_label(form.password, 'votre password') }}
					{{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(form.password) }}
				</div>
				<div class="form-group"></div>
				<div class="form-group">
					{{ form_label(form.Type, 'account type') }}
					{{ form_widget(form.Type, { 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(form.Type) }}
				</div>
				<div class="form-group" style=" display: flex;flex-direction: row;justify-content: center; align-items: flex-start;">
					{{ include('user/_form.html.twig', {'button_label': 'Update'}) }}
					{{ include('user/_delete_form.html.twig') }}
				</div>


				{{ form_end(form, {'render_reset': false }) }}
			</div>
		</div>
	</div>{# {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}
																								
																								
																								
																								
																									{{ include('user/_delete_form.html.twig') }}</div> #}{% endblock %}
