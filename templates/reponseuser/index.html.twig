{% extends 'front.html.twig' %}

{% block title %}Reponse index{% endblock %}

{% block body %}
<div class="form-container" style="border: 1px solid #ccc; padding: 200px;">
<center>
    <h1>Vos reponses</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre de la reponse |</th>
                <th>la reponse |</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.idreponse }}</td>
                <td>{{ reponse.repo }}</td>
                <td>
                    <a href="{{ path('app_reponseuser_show', {'idreponse': reponse.idreponse}) }}">show</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</center>
</div>
    
{% endblock %}
