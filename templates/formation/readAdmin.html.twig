{% extends 'Admindachboard.html.twig' %}

{% block title %}liste formation{% endblock %}

{% block body %}
    <h1>Formation Index</h1>
     <!-- Nav Bar Start -->
			<div class="nav">
				<div class="container-fluid">
					<nav class="navbar navbar-expand-md bg-dark navbar-dark">
						<a href="#" class="navbar-brand">MENU</a>
						<button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
							<span class="navbar-toggler-icon"></span>
						</button>

						<div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
							<ul class="navbar-nav mr-auto">
              <li class="nav-item">
              <input type="text" name="titre">
              </li>
								<li class="nav-item">
									<a href="{{ path('app_formation_searchadmin') }}" class="nav-link">Rechercher</a>
                   
								</li>
								<li class="nav-item">
									<a href="{{ path('app_formation_ajouteradmin') }}" class="nav-link">Ajouter</a>
								</li>

                </li>
								<li class="nav-item">
									<a href="{{ path('app_formation_readadmin2') }}" class="nav-link">Formation en attend</a>
								</li>
							</ul>
						</div>
					</nav>
				</div>
			</div>
    <!-- Nav Bar End -->
    <div class="row">
        {% for formation in formations %}
            <div class="col-md-3 mb-3">
                <div class="card">
                    <div class="card-header">{{ formation.titre }}</div>
                    <div class="card-body">
                        <h5 class="card-title">{{ formation.type }}</h5>
                        <p class="card-text">{{ formation.description }}</p>
                        <p class="card-text">{{ formation.pays }}</p>
                        <p class="card-text">{{ formation.debut|date('Y-m-d') }} | {{ formation.fin|date('Y-m-d') }}</p>
                    </div>
                    <div class="card-footer">
                    <a href="{{
                          path(
                            'app_participationformation_add',
                            {
                              id: formation.id
                            }
                          )
                        }}" class="btn btn-danger mr-2">Participe</a>
                        <a href="{{
                          path(
                            'app_formation_update',
                            {
                              id: formation.id
                            }
                          )
                        }}" class="btn btn-primary">Edit</a>
                        <a href="{{
                          path(
                            'app_formation_delete',
                            {
                              id: formation.id
                            }
                          )
                        }}" class="btn btn-danger mr-2">Delete</a>
                        

                        
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
